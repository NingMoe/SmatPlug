<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_login_bg"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/login_register_bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="@dimen/login_register_button_width"
            android:layout_height="@dimen/login_register_button_height"
            android:text="@string/login"
            android:textSize="@dimen/first_login_text_size"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_register_login__selector" />

        <Button
            android:id="@+id/register_btn"
            android:layout_marginLeft="@dimen/first_login_btn_margin"
            android:layout_width="@dimen/login_register_button_width"
            android:layout_height="@dimen/login_register_button_height"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textSize="@dimen/first_login_text_size"
            android:textColor="@color/white"
            android:background="@drawable/btn_register_login__selector" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/scene_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/trigger_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/scene_manually_trigger_icon" />

            <TextView
                android:id="@+id/trigger_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="#425AF4"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/execute_button"
            android:layout_width="51dp"
            android:layout_height="30.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13.5dp"
            android:background="@drawable/scene_execute_button_selector"
            android:text="@string/execute"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/btn_enable_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13.5dp"
            android:background="@android:color/transparent"
            android:button="@drawable/scene_execute_switch_button_bg"
            android:checked="false"
            android:gravity="center_vertical"
            android:minHeight="@null"
            android:minWidth="@null"
            android:text="@null"
            android:textOff="@null"
            android:textOn="@null" />
    </RelativeLayout>
</LinearLayout>